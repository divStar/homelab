apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: pgadmin
  namespace: ${pgadmin_namespace}
  annotations:
    external-dns.alpha.kubernetes.io/target: ${external_dns_target}
spec:
  entryPoints:
    - websecure
  routes:
  - match: Host(`pgadmin.${cluster_domain}`)
    kind: Rule
    services:
    - kind: Service
      name: pgadmin-release-pgadmin4
      port: 80
    middlewares: []
  tls:
    certResolver: step-ca