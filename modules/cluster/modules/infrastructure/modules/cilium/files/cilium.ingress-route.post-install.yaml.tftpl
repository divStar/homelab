apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: hubble-ui
  namespace: ${cilium_namespace}
  annotations:
    external-dns.alpha.kubernetes.io/target: ${external_dns_target}
spec:
  entryPoints:
    - websecure
  routes:
  - match: Host(`hubble.${cluster_domain}`)
    kind: Rule
    services:
    - kind: Service
      name: hubble-ui
      port: 80
    middlewares: []
