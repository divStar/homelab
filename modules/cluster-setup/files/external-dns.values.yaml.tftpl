# This environment variable sets the version PiHole to v6
extraEnvVars:
  - name: EXTERNAL_DNS_PIHOLE_API_VERSION
    value: "6"

provider: pihole
pihole:
  server: https://pihole.my.family
  tlsSkipVerify: true
  secretName: ${external_dns_secret_name}

registry: noop
policy: upsert-only
txtOwnerId: talos-cluster

domainFilters:
  - "my.world"

resources:
  requests:
    memory: 50Mi
    cpu: 10m
  limits:
    memory: 150Mi
    cpu: 100m